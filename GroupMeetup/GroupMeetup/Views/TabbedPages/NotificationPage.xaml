                                <Label Text="{Binding Bus.BusSchedule, StringFormat='Date: {0:MM/dd/yyyy HH:mm}'}" TextColor="#FAEBDO"/>
                                <Label Text="{Binding TotalFare, StringFormat='Fare: PHP {0:F0} '}" TextColor="#FOA4A2" /> -->
                            </StackLayout>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>