<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroupMeetup.TabbedPages.EventPage"
             Title="Events"
             BackgroundColor="White">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Event" Icon="add_logo.png" Clicked="NewEvent_Clicked"></ToolbarItem>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout Spacing="15">
           
            <Button Text="Add New Event"
                    Clicked="NewEvent_Clicked"
                    WidthRequest="80" 
                    HeightRequest="80" 
                    BorderRadius="40"
                  VerticalOptions  ="Center"
                 HorizontalOptions="Center"
                    />
            
            <ListView x:Name="MeetingsListView" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Subject}" Detail="{Binding Location.DisplayName}"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>