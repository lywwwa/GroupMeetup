<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GroupMeetup.TabbedPages.EventPage"
             Icon="event_logo.png"
             BackgroundColor="#01a1ff">
    

    <ContentPage.Content>

        <AbsoluteLayout>
            <ListView x:Name="MeetingsListView" BackgroundColor="White" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Subject}" Detail="{Binding Location.DisplayName}" TextColor="#01a1ff"></TextCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="1,1.18,0.5,0.25">
                <Button Image="add_logo.png"
                        BackgroundColor="#72275b"
                    Clicked="NewEvent_Clicked"
                    WidthRequest="80" 
                    HeightRequest="80" 
                    BorderRadius="40"
                   
                    />
            </StackLayout>
            
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>